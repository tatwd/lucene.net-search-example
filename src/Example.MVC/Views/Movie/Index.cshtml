@model IEnumerable<Example.MVC.Models.MovieSearchModel>
@{
    ViewBag.Title = "Index";
}

<h2>Search Movie Here</h2>
<form class="form-inline my-3" action="/movie/search" method="post">
    <input name="q" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>
<div id="movie-list" class="mt-3">
    <ul class="list-group">
        @if (Model != null)
        {
            if (Model.Count() <= 0)
            {
                <li class="list-group-item">没找到你要的结果！</li>
            }
            else
            {
                foreach (var movie in Model)
                {
                    <li class="list-group-item">
                        <h5>
                            <span class="badge badge-success">@movie.DoubanRating</span>
                            《@movie.Title》
                            <span class="badge badge-secondary">@String.Format("{0:yyyy-MM-dd}", movie.ReleaseAt)</span>
                        </h5>
                        <small>@movie.AbstractText</small>
                    </li>
                }
            }
        }
        else
        {
            <li class="list-group-item">请输入搜索关键词！</li>
        }
    </ul>
</div>
